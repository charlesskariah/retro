.top-bar
  .top-bar-left
    %ul.dropdown.menu{"data-dropdown-menu" => ""}
      %li.menu-text Retrospective
      %li.is-active
        %a{:href => "/peoples"} People
      %li
        %a{:href => "/manage"} Manage
      %li
        %a{:href => "/users"} All Users
%table.unstriped
  %thead
    %th
      %h2 Edit User
    %form{:action => "#"}
  %tbody
    %tr
      %td
        %label
          Name:
          %input{:value => @user["name"], :type => "text", :name => "name"}/
    %tr
      %td
        %label
          Date of Birth:
          %input#date{:value => @user["dob"], :type => "text", :name => "dob"}
    %tr
      %td
        %input.button.success{:type => "submit"}

:javascript
  $(document ).ready(function() {
    $('#date').datepicker( {
      changeMonth: true,
      changeYear: true,
      showButtonPanel: true,
      dateFormat: 'dd MM'
    }).focus(function () {
      $(".ui-datepicker-year").hide();
    });
  });